class Solution {
public:
    bool check(vector<int>& nums) {
        int n = nums.size(), cnt = 0;
        if(c(nums)) return true;
        for(int i=1; i<n; i++){
            if(nums[i-1] > nums[i]) cnt++;
        }
        if(nums[n-1] > nums[0]) cnt++;

        return cnt == 1;
    }
    bool c(vector<int>& arr){ // this is for, if all elements of array are same
         int n = arr.size();
        for(int i=1; i<n; i++){
            if(arr[i-1] == arr[i]) continue;
            else return false;
        }
        return true; 
    }
};

TC: O(2n) SC: O(1)
